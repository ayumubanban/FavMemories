<div class="">新規ユーザー登録</div>
  <div class="form users-form">
    <div class="form-body">
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <%= form_tag("/users/create") do %>
      <p>ユーザー名</p>
      <input class="input" name="name" value="<%= @user.name %>">
      <p>メールアドレス</p>
      <input class="input" name="email" value="<%= @user.email %>">
      <p>パスワード</p>
      <input class="input" name="password" type="password" value="<%= @user.password %>">
      <br>
      <input class="button is-primary" type="submit" value="新規登録">
    <% end %>
    </div>
  </div>