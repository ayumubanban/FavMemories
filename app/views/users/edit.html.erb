<div class="main users-edit">
  <div class="">
    <div class="form-heading">ユーザー情報の編集</div>
      <div class="form users-form">
        <div class="form-body">
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
              <%# すみませんが、画像を選択し直してください %>
            </div>
          <% end %>

          <%= form_with model: @user, url: "/users/#{@user.id}", method: :put, local: true do |form| %>
            <%= form.label :name, "ユーザー名"%>
            <%= form.text_field :name, value: @user.name, class: "" %>
            <%= form.label :email, "メールアドレス" %>
            <%= form.text_field :email, value: @user.email, class: "" %>
            <%= form.label :avatar, "プロフィール画像(任意)" %>
            <%= form.file_field :avatar, class: "", id: "book_img" %>
            現在の画像
            <%#= image_tag @user.avatar, id: "img_prev" if @user.avatar.attached? %>
            <%# 画像プレビュー機能あり %>
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: "is-rounded", id: "img_prev" %>
            <% else %>
              <img src="/blue_egg.jpg" class="is-rounded">
            <% end %>
            <%= form.submit "保存", class: "button is-primary" %>
          <% end %>

        </div>
      </div>
  </div>
</div>