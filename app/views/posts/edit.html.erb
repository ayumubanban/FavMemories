<div class="main posts-new">
  <div class="">
    <h1 class="form-heading">編集する</h1>

    <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <%= form_with model: @post, url: "/posts/#{@post.id}", method: :put, local: true do |form| %>
      <%= form.label :content, "投稿内容" %>
      <%= form.text_area :content, value: @post.content, class: "" %>
      <%= form.label :photo, "プロフィール画像(任意)" %>
      <%= form.file_field :photo, class: "", id: "book_img" %>
      現在の画像
      <%#= image_tag @user.avatar, id: "img_prev" if @user.avatar.attached? %>
      <%# 画像プレビュー機能あり 1101 img_prevをidからclassに変え、複数つけた %>
      <% if @post.photo.attached? %>
        <%= image_tag @post.photo, class: "is-rounded img_prev", id: "" %>
      <% end %>
      <%= form.submit "投稿", class: "button is-primary" %>
    <% end %>

